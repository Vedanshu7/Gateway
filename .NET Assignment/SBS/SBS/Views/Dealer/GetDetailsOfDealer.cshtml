@model SBS.MDL.Models.DealerInformationViewModel

@{
    Layout = "~/Views/Shared/_LayoutDealer.cshtml";
}

<div class="pt-3">
    <div class="card border-dark">
        <div class="card-header">Dealer's Name: @Html.DisplayFor(model => model.dealer.FirstName) @Html.DisplayFor(model => model.dealer.LastName)</div>
        <div class="card-body">
            <div class="row">
                <div class="col-4">
                    <p class="card-text">Address: @Html.DisplayFor(model => model.dealer.Address) </p>
                </div>
                <div class="col-4">
                    <p class="card-text">ZipCode: @Html.DisplayFor(model => model.dealer.ZipCode)</p>
                </div>
                <div class="col-4">
                    <p class="card-text">HomePhone: @Html.DisplayFor(model => model.dealer.HomePhone)</p>
                </div>

            </div>
            <div class="row">
                <div class="col-4">
                    <p class="card-text">Email: @Html.DisplayFor(model => model.dealer.Email)</p>

                </div>


            </div>

        </div>
        <div class="card-footer">
            Note: @Html.DisplayFor(model => model.dealer.Note)
        </div>
    </div>
</div>

<div class="row pt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Appointment List</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>

                                <tr>
                                    <th>
                                        DealerName
                                    </th>
                                    <td>
                                        VehicleModel
                                    </td>
                                    <th>
                                        MechanicName
                                    </th>
                                    <th>
                                        ServiceType
                                    </th>
                                    <th>
                                        BookingDateTime
                                    </th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.appointments)
                                {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.DealerName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.VehicleModel)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.MechanicName)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.ServiceType)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.BookingDateTime)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditBooking", new { id = item.Id, customerId = item.CustomerId }, new { @class = "btn btn-primary" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "DeleteBooking", new { id = item.Id, customerId = item.CustomerId }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>

<div class="row pt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Dealer's Mechanics List</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>

                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Mechanic Number
                                    </th>
                                    <th>
                                        Mobile
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.mechanics)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MechanicNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MobileNo)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "EditMechanic", new { id = item.Id }, new { @class = "btn btn-primary" })
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "DeleteMechanic", new { id = item.Id }, new { @class = "btn btn-danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</div>
