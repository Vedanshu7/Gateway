@model ProductManagment.Models.Product
<div class="main-panel">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
        <div class="container-fluid">
            <div class="navbar-wrapper">
                <a class="navbar-brand" id="titleone" href="javascript:;">Insert Product</a>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="sr-only">Toggle navigation</span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
                <span class="navbar-toggler-icon icon-bar"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end">

                <ul class="navbar-nav">


                    <li class="nav-item dropdown">
                        <a class="nav-link" href="javascript:;" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">person</i>
                            <p class="d-lg-none d-md-block">
                                Account
                            </p>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
                            

                            <a class="dropdown-item"  href="/Home/Logout">Log out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Insert Product</h4>
                            <p class="card-category"></p>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm("Insert", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Name</label>
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Category</label>
                                            @Html.EditorFor(model => model.Category, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Price</label>
                                            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Quantity</label>
                                            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Short Description</label>
                                            @Html.EditorFor(model => model.Short_Description, new { htmlAttributes = new { @class = "form-control", @type = "text" } })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.Short_Description, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Long Description</label>
                                            @Html.EditorFor(model => model.Long_Description, new { htmlAttributes = new { @class = "form-control", @type = "text", @row = "5" } })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.Long_Description, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Small Image</label>
                                            @Html.TextBoxFor(model => model.S_Image, new { Type = "File", @class = "form-control" })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.S_Image, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Large Image</label>
                                            @Html.TextBoxFor(model => model.L_Image, new { Type = "File", @class = "form-control" })
                                            <div class="validation text-center">
                                                @Html.ValidationMessageFor(model => model.L_Image, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                

                                <input type="submit" class="btn btn-primary pull-right" name="submit" value="Insert Product" />
                                <div class="clearfix"></div>
                            }
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>

</div>

