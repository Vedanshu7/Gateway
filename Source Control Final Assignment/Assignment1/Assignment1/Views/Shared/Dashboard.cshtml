
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Dashboard</title>
    <link href="~/favicon_io/favicon.ico" rel="icon" type="image/png"/>
    @Styles.Render("~/Content/styles.css")
    @Styles.Render("~/Content/mdi/css/materialdesignicons.min.css")
    @Scripts.Render("~/Scripts/jquery-3.5.1.min.js")


</head>
<body>

    <nav class="navbar navbar-expand navbar-dark fixed-top">
        <div class="col-sm-2">
            <a class="navbar-brand" href="#">Profile Viewer</a>
        </div>

        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group  text-white">
                @System.Web.HttpContext.Current.Session["Email"]
            </div>
        </form>

        <ul class="navbar-nav ml-auto ml-md-0" id="navitem">
            <li class="nav-item dropdown" id="li">
                <a class="nav-link dropdown-toggle" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><svg class="svg-inline--fa fa-user fa-w-14 fa-fw" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="user" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512" data-fa-i2svg=""><path fill="currentColor" d="M224 256c70.7 0 128-57.3 128-128S294.7 0 224 0 96 57.3 96 128s57.3 128 128 128zm89.6 32h-16.7c-22.2 10.2-46.9 16-72.9 16s-50.6-5.8-72.9-16h-16.7C60.2 288 0 348.2 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-41.6c0-74.2-60.2-134.4-134.4-134.4z"></path></svg></a>
                <div class="dropdown-menu dropdown-menu-right" id="divd" aria-labelledby="userDropdown">
                    @using (Html.BeginForm("Logout", "Home", FormMethod.Post))
                    {

                        <input type="submit" onclick="window.location.href='/Home/Logout'" class="dropdown-item" value="Logout" name="logout" id="logout">
                    }


                </div>
            </li>
        </ul>
    </nav>

    <nav class="sidebar">
        <div id="layoutSidenav">



            <ul class="nav flex-column">
                @if (ViewBag.Title == "Index")
                {
                    <li class="nav-item menu-items active">
                        <a class="nav-link" href="/Home/Index">
                            <span class="menu-icon">
                                <i class="mdi mdi-speedometer"> </i>
                            </span>
                            &nbsp;
                            <span class="menu-title">Profile</span>
                        </a>
                    </li>
                    <li class="nav-item menu-items">
                        <a class="nav-link" href="/Home/Log">
                            <span class="menu-icon">
                                <i class="mdi mdi-table-large"> </i>
                            </span>
                            &nbsp;
                            <span class="menu-title">Profile</span>
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item menu-items">
                        <a class="nav-link" href="/Home/Index">
                            <span class="menu-icon">
                                <i class="mdi mdi-speedometer"> </i>
                            </span>
                            &nbsp;
                            <span class="menu-title">Profile</span>
                        </a>
                    </li>
                    <li class="nav-item menu-items active">
                        <a class="nav-link" href="/Home/Log">
                            <span class="menu-icon">
                                <i class="mdi mdi-table-large"> </i>
                            </span>
                            &nbsp;
                            <span class="menu-title">Log</span>
                        </a>
                    </li>
                }

            </ul>



        </div>
    </nav>

    @RenderBody()


    @Styles.Render("~/Content/bootstrap.min.css")
    @Scripts.Render("~/Scripts/Custom.js")
</body>
</html>